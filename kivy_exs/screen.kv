ScreenManagement:
    MenuScreen:
    AboutUs:
    FileExplorer:
    AppAbout:
<MenuScreen>:
    name: 'MenuScreen'
    GridLayout:
        rows: 3
        Image:
            source: 'Images/Statue_Lib.png'
            orientation: 'vertical'
            size: self.texture_size
        FloatLayout:
            Button:
                text: "File Explorer"
                font_size: 36
                size_hint: 0.45, 0.15
                pos_hint: {'x': 0.275, 'y': 0.78}
                on_press:
                    root.manager.transition.direction = "left"
                    root.manager.current = 'FileExplorer'
            Button:
                text: "Devs"
                font_size: 36
                size_hint: 0.45, 0.15
                pos_hint: {'x': 0.275, 'y': 0.58}
                on_press:
                    root.manager.transition.direction = "down"
                    root.manager.current = 'AboutUs'
            Button:
                text: "About"
                font_size: 36
                size_hint: 0.45, 0.15
                pos_hint: {'x': 0.275, 'y': 0.38}
                on_press:
                    root.manager.transition.direction = "up"
                    root.manager.current = 'AppInfo'
            Button:
                text: "Quit"
                font_size: 36
                size_hint: 0.45, 0.15
                pos_hint: {'x': 0.275, 'y': 0.18}
                on_press:
                    app.get_running_app().stop()

