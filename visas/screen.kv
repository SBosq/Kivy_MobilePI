            source: 'Images/FIT.png'
            pos_hint: {'x':-0.35, 'y':0.38}
        Image:
            source: 'Images/Kimy.png'
            pos_hint: {'x':0.35, 'y':-0.2}
        Image:
            source: 'Images/Saulo.png'
            pos_hint: {'x':-0.35, 'y':.14}
        Label:
            text: 'KIMBERLY GARCIA'
            font_size: 48
            pos_hint: {'x':-0.2, 'y':-0.15}
            color: 0, 0, 0, 1
        Label:
            text: 'SAULO BOSQUEZ'
            font_size: 48
            pos_hint: {'x':0.05, 'y':0.18}
            color: 0, 0, 0, 1
        Label:
            pos_hint: {'x':-0.2, 'y':-0.23}
