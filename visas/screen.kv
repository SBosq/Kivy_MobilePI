ScreenManagement:
    MenuScreen:
    AboutUs:
    CalcProb:
    AppAbout:
<MenuScreen>:
    name: 'MenuScreen'
    FloatLayout:
        Label:
            text: "HOME"
            font_size: 48
            size_hint: 0.35, 0.2
            pos_hint: {'center_x':0.15, 'center_y':0.88}
            background_color: (155/255, 155/255, 155/255, 1)
            canvas.before:
				Color:
					rgba: self.background_color
				RoundedRectangle:
					size: self.size
					pos: self.pos
        Image:
            source: 'Images/passport.png'
            orientation: 'vertical'
            size_hint: 1, 0.5
            pos_hint: {"x":0, "y":0.5}
        RoundedButton:
            text: "CALCULATE PROBABILITY"
            font_size: 24
            size_hint: 0.4, 0.1
            pos_hint: {'x': 0.3, 'y': 0.38}
            on_press:
                root.manager.transition.direction = "left"
                root.manager.current = 'CalcProb'
        RoundedButton:
            text: "DEVS"
            font_size: 36
            size_hint: 0.4, 0.1
            pos_hint: {'x': 0.3, 'y': 0.26}
            on_press:
                root.manager.transition.direction = "down"
                root.manager.current = 'AboutUs'
        RoundedButton:
            text: "ABOUT"
            font_size: 36
            size_hint: 0.4, 0.1
            pos_hint: {'x': 0.3, 'y': 0.14}
            on_press:
                root.manager.transition.direction = "up"
                root.manager.current = 'AppInfo'
        RoundedButton:
            text: "QUIT"
            font_size: 36
            size_hint: 0.4, 0.1
            pos_hint: {'x': 0.3, 'y': 0.02}
            on_press:
                app.get_running_app().stop()

<AboutUs>:
    name:'AboutUs'
    FloatLayout:
        Label:
            text: "ABOUT US"
            font_size: 48
            size_hint: 0.35, 0.2
            pos_hint: {'center_x':0.84, 'center_y':0.88}
