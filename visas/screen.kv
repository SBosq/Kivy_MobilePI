<AppAbout>:
    name: 'AppInfo'
    FloatLayout:
        Label:
            text: "APP INFO"
            font_size: 48
            size_hint: 0.35, 0.2
            pos_hint: {'center_x':0.15, 'center_y':0.88}
            background_color: (61/255, 112/255, 99/255, 1)
            canvas.before:
				Color:
					rgba: self.background_color
				RoundedRectangle:
					size: self.size
					pos: self.pos
		Label:
            text:
                '''APLICACIÓN MÓVIL CON APRENDIZAJE AUTOMÁTICO
                \nSUPERVISADO. LA CUAL DA UNA PREDICCIÓN DE SI SE LE
                \nPODRÁ OTORGAR O NO UNA VISA DE TRABAJO EN
                \nESTADOS UNIDOS A UN PROFESIONISTA, EN FUNCIÓN DEL
                \nPORCENTAJE PREDECIDO.'''
            font_size: 24
            halign: "center"
            size_hint: 0.85, 0.5
            pos_hint: {'center_x':0.5, 'center_y':0.5}
            background_color: (61/255, 112/255, 99/255, 1)
            canvas.before:
				Color:
					rgba: self.background_color
				RoundedRectangle:
					size: self.size
					pos: self.pos
        Button:
            size_hint: 0.1, 0.1
            pos_hint: {'x': 0.05, 'y': 0.025}
            background_color: 0,0,0,0
            on_press:
                root.manager.transition.direction = "down"
                root.manager.current = 'MenuScreen'
            Image:
                source: 'Images/home.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y

<RoundedButton@Button>
	background_color: (0,0,0,0)
	background_normal: ''
	canvas.before:
		Color:
			rgba: (0/255,25/255,51/255,1)
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [20]