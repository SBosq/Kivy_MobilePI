
ScreenManagement:
    MenuScreen:
    AboutUs:
    CalcProb:
    AppAbout:
<MenuScreen>:
    name: 'MenuScreen'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'Images/HS.png'
    FloatLayout:
        Image:
            source: 'Images/passport.png'
            orientation: 'vertical'
            size_hint: 1, 0.48
            pos_hint: {"center_x":0.5, "center_y":0.5}
        RoundedButton:
            size_hint: 0.15, 0.1
            pos_hint: {'center_x': 0.18, 'center_y': 0.2}
            on_press:
                root.manager.transition.direction = "left"
                root.manager.current = 'CalcProb'
            Image:
                source: 'Images/survey.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
        FloatLayout:
            RoundedButton:
                size_hint: 0.1, 0.05
                pos_hint: {'x': 0.88, 'y': 0.8}
                on_press:
                    root.manager.transition.direction = "up"
                    root.manager.current = 'AboutUs'
                Image:
                    source: 'Images/users.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
        RoundedButton:
            size_hint: 0.15, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.15}
            on_press:
                root.manager.transition.direction = "up"
                root.manager.current = 'AppInfo'
            Image:
                source: 'Images/info.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
        RoundedButton:
            size_hint: 0.15, 0.1
            pos_hint: {'center_x': 0.81, 'center_y': 0.2}
            on_press:
                app.get_running_app().stop()
            Image:
                source: 'Images/exit1.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y

