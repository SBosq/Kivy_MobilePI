            font_size: 36
            markup: True
            text:'[ref=https://portafoliosfit.um.edu.mx/kimberlygarcia/]PORTAFOLIO[/ref]'
            color: (218/255, 147/255, 76/255, 1)
            on_ref_press:
                import webbrowser
                webbrowser.open('https://portafoliosfit.um.edu.mx/kimberlygarcia/')
        Label:
            pos_hint: {'x':0.05, 'y':0.1}
            id: link_portafolio
            font_size: 36
            markup: True
            text:'[ref=https://portafoliosfit.um.edu.mx/saulobosquez/]PORTAFOLIO[/ref]'
            color: (218/255, 147/255, 76/255, 1)
            on_ref_press:
                import webbrowser
                webbrowser.open('https://portafoliosfit.um.edu.mx/saulobosquez/')
    FloatLayout:
        Button:
            size_hint: 0.1, 0.1
            pos_hint: {'x': 0.05, 'y': 0.025}
            background_color: 0,0,0,0
            on_press:
                root.manager.transition.direction = "up"
                root.manager.current = 'MenuScreen'
            Image:
                source: 'Images/return_arrow.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y




